<%- include('../partials/header', { title: 'Submit a Review', page: 'submit-review' }) %>

    <main class="submit-review-page">
        <div class="container">
            <div class="review-form-container">
                <div class="review-form-header">
                    <h1>Submit a Review</h1>
                    <p>Share your experience to help others make informed decisions</p>
                </div>

                <form id="reviewForm" class="review-form">
                    <div id="alertContainer"></div>

                    <div class="form-section">
                        <h2>Property Information</h2>
                        
                        <div class="form-group">
                            <label for="propertyName">Property Name *</label>
                            <input type="text" id="propertyName" name="propertyName" required placeholder="e.g., Sunset Apartments">
                        </div>

                        <div class="form-group">
                            <label for="propertyAddress">Property Address (Only we see this) *</label>
                            <input type="text" id="propertyAddress" name="propertyAddress" required placeholder="123 Main Street, City, State, ZIP">
                        </div>

                        <div class="form-group">
                            <label for="landlordName">Landlord/Management Company</label>
                            <input type="text" id="landlordName" name="landlordName" placeholder="Optional">
                        </div>
                    </div>

                    <div class="form-section">
                        <h2>Your Review</h2>
                        
                        <div class="form-group">
                            <label for="rating">Overall Rating *</label>
                            <div class="rating-input" id="ratingInput">
                                <button type="button" class="star" data-rating="1" aria-label="Rate 1 star">★</button>
                                <button type="button" class="star" data-rating="2" aria-label="Rate 2 stars">★</button>
                                <button type="button" class="star" data-rating="3" aria-label="Rate 3 stars">★</button>
                                <button type="button" class="star" data-rating="4" aria-label="Rate 4 stars">★</button>
                                <button type="button" class="star" data-rating="5" aria-label="Rate 5 stars">★</button>
                            </div>
                            <input type="hidden" id="rating" name="rating" required>
                        </div>

                        <div class="form-group">
                            <label for="reviewTitle">Review Title *</label>
                            <input type="text" id="reviewTitle" name="reviewTitle" required placeholder="Summarize your experience">
                        </div>

                        <div class="form-group">
                            <label for="reviewContent">Review Details *</label>
                            <textarea id="reviewContent" name="reviewContent" required rows="8" placeholder="Share your detailed experience..."></textarea>
                        </div>
                    </div>

                    <div class="form-section">
                        <h2>Verification Documents</h2>
                        <p class="form-hint">Upload proof of tenancy (lease agreement, utility bill, etc.). Your documents will be used for verification only and deleted after review approval.</p>
                        
                        <div class="form-group">
                            <label for="documents">Upload Documents (Max 5 files, 10MB each)</label>
                            <input type="file" id="documents" name="documents" multiple accept=".jpg,.jpeg,.png,.pdf">
                            <div id="fileList" class="file-list"></div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="button" class="btn btn-secondary" onclick="window.history.back()">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="submitBtn">Submit Review</button>
                    </div>
                </form>
            </div>
        </div>
    </main>

<%- include('../partials/footer', { scripts: ['/js/api.js', '/js/submit-review.js'] }) %>
