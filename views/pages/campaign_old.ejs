
<%- include('../partials/header', { title: 'Clear Window Campaign', page: 'campaign' }) %>

<div class="container campaign-page" style="max-width:900px;margin:auto;padding:32px 0;">
  <style>
    @media (max-width: 600px) {
      .campaign-page {
        padding: 8px 16px !important;
      }
