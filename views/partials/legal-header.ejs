    <style>
        .legal-page {
            padding: 100px 0 80px;
            min-height: 100vh;
        }
        
        .legal-header {
            text-align: center;
            margin-bottom: 64px;
        }
        
        .legal-header h1 {
            font-size: 48px;
            font-weight: 800;
            margin-bottom: 16px;
            color: var(--text-primary);
            letter-spacing: -0.02em;
        }
        
        .legal-header .subtitle {
            font-size: 18px;
            color: var(--text-secondary);
        }
        
        .legal-content {
            max-width: 900px;
            margin: 0 auto;
            background: var(--bg-primary);
            padding: 48px;
            border-radius: 20px;
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow-lg);
        }
        
        .legal-content h2 {
            font-size: 32px;
            font-weight: 700;
            margin: 48px 0 24px 0;
            color: var(--text-primary);
        }
        
        .legal-content h2:first-child {
            margin-top: 0;
        }
        
        .legal-content h3 {
            font-size: 24px;
            font-weight: 600;
            margin: 32px 0 16px 0;
            color: var(--text-primary);
        }
        
        .legal-content h4 {
            font-size: 18px;
            font-weight: 600;
            margin: 24px 0 12px 0;
            color: var(--text-primary);
        }
        
        .legal-content p {
            margin-bottom: 16px;
            line-height: 1.8;
            color: var(--text-secondary);
        }
        
        .legal-content ul, .legal-content ol {
            margin-bottom: 24px;
            padding-left: 24px;
            color: var(--text-secondary);
        }
        
        .legal-content li {
            margin-bottom: 12px;
            line-height: 1.8;
        }
        
        .legal-content a {
            color: var(--primary-color);
            text-decoration: none;
        }
        
        .legal-content a:hover {
            text-decoration: underline;
        }
        
        .info-box {
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.08) 0%, rgba(147, 51, 234, 0.08) 100%);
            padding: 24px;
            border-radius: 12px;
            margin: 32px 0;
            border-left: 4px solid var(--primary-color);
        }
        
        .info-box h4 {
            margin-top: 0;
            color: var(--primary-color);
        }
        
        .info-box p {
            margin-bottom: 0;
        }
        
        .contact-section {
            background: linear-gradient(135deg, rgba(2, 132, 199, 0.08) 0%, rgba(6, 182, 212, 0.08) 100%);
            padding: 32px;
            border-radius: 16px;
            margin-top: 48px;
            text-align: center;
        }
        
        .contact-section h3 {
            margin-top: 0;
            color: var(--primary-color);
        }
        
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
            margin-bottom: 32px;
            transition: gap 0.3s;
        }
        
        .back-link:hover {
            gap: 12px;
        }
        
        .table-of-contents {
            background: var(--bg-secondary);
            padding: 24px;
            border-radius: 12px;
            margin-bottom: 48px;
        }
        
        .table-of-contents h3 {
            margin-top: 0;
            font-size: 20px;
            margin-bottom: 16px;
        }
        
        .table-of-contents ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .table-of-contents li {
            margin-bottom: 8px;
        }
        
        .table-of-contents a {
            color: var(--text-primary);
            font-weight: 500;
        }
    </style>
</head>
